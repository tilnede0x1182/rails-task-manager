<div class="card shadow p-4 mb-4 bg-light rounded">
  <%= form_with model: @task, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :title, "Titre", class: "form-label fw-bold" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Entrez le titre de la tâche" %>
    </div>

    <div class="mb-3">
      <%= f.label :details, "Détails", class: "form-label fw-bold" %>
      <%= f.text_area :details, class: "form-control", placeholder: "Ajoutez une description" %>
    </div>

    <% if @task.persisted? %>
      <div class="form-check mb-3">
        <%= f.check_box :completed, class: "form-check-input" %>
        <%= f.label :completed, "Tâche terminée ?", class: "form-check-label" %>
      </div>
    <% end %>

    <%= f.submit @task.persisted? ? "Mettre à jour" : "Créer", class: "btn btn-success" %>
  <% end %>
</div>
